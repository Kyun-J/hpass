<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/fab_backgroud"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_fab"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_text_2"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/fab_btn_2"
        app:layout_constraintBottom_toBottomOf="@+id/fab_btn_2"
        app:layout_constraintRight_toLeftOf="@+id/fab_btn_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_text_1"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/fab_btn_1"
        app:layout_constraintBottom_toBottomOf="@+id/fab_btn_1"
        app:layout_constraintRight_toLeftOf="@+id/fab_btn_1"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_btn_2"
        android:backgroundTint="@color/colorChocolate"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:borderWidth="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fab_btn_1"
        app:pressedTranslationZ="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_btn_1"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorChocolate"
        app:borderWidth="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_fab"
        app:pressedTranslationZ="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="@color/colorChocolate"
        android:id="@+id/main_fab"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="20dp"
        app:borderWidth="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>