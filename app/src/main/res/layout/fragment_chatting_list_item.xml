<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Chat_List_item_background"
    android:background="@color/colorWhite">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_list_item_title"
        android:text="title"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_list_item_users"
        android:text=" 123 "
        android:textSize="12dp"
        android:background="@color/colorGray"
        app:layout_constraintLeft_toRightOf="@+id/chat_list_item_title"
        app:layout_constraintTop_toTopOf="@+id/chat_list_item_title"
        app:layout_constraintBottom_toBottomOf="@id/chat_list_item_title"
        android:layout_marginLeft="4dp"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_list_item_no_alarm"
        app:layout_constraintTop_toTopOf="@+id/chat_list_item_title"
        app:layout_constraintBottom_toBottomOf="@+id/chat_list_item_title"
        app:layout_constraintLeft_toRightOf="@+id/chat_list_item_users"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_list_item_time"
        android:text="오후 6:45"
        android:textSize="10dp"
        android:textColor="@color/colorGrayAccent"
        app:layout_constraintTop_toTopOf="@+id/chat_list_item_title"
        app:layout_constraintBottom_toBottomOf="@+id/chat_list_item_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_list_item_recent"
        android:text="content"
        android:textColor="@color/colorGrayAccent"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/chat_list_item_title"
        app:layout_constraintLeft_toLeftOf="@+id/chat_list_item_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_list_item_stack"
        android:text="100"
        android:textColor="@color/colorAlertRed"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/chat_list_item_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorChocolate"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>